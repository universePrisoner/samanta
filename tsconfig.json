{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"target": "ESNext",
		"module": "ESNext",
		"strict": true,
		"jsx": "react",
		"paths": {
			"*": ["./node_modules/*"],
			"spec/*": ["./src/spec/*"]
		}
	},
	"include": [
		"src/**/*",
		"__tests__/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
